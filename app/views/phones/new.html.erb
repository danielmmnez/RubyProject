<p hidden><%= @render_cart = false %></p>

<div class="add-items">

    <h1>AÃ±adir Smartphone</h1>

    <%= form_with model: @phone do |form| %>
    <div class="name">
        <div class="name-label"><%= form.label :name %></div>
        <div class="name-input"><%= form.text_field :name %></div>
        <% @phone.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
        <% end %>
        <br>
    </div>

    <div class="ram">
        <%= form.label :ram %><br>
        <%= form.text_area :ram %>
        <% @phone.errors.full_messages_for(:ram).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

    <div class="newbrand">
        <%= form.label :brand %><br>
        <%= form.text_area :brand %>
        <% @phone.errors.full_messages_for(:brand).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

    <div class="new-price">
        <%= form.label :price %><br>
        <%= form.text_area :price %>
        <% @phone.errors.full_messages_for(:price).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

    <div class="storage">
        <%= form.label :storage %><br>
        <%= form.text_area :storage %>
        <% @phone.errors.full_messages_for(:storage).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

    <div class="buttons-container">
        <%= form.submit class: "submit"%>
        <% end %>
        <div class="back-container">
            <a href="<%=root_path%>" class="back-link">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="icon">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3" />
                </svg>
            </a>
        </div>
    </div>
